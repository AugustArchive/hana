{
  "extends": "@augu/tsconfig",
  "compilerOptions": {
    "moduleResolution": "node",
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "sourceMap": true,
    "rootDir": "./src",
    "types": ["node", "reflect-metadata", "@augu/utils"],
    "outDir": "./build",
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
